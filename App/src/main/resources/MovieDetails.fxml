                    <Font name="System Bold" />
                </font>
            </Text>
            <Label fx:id="runtimeText" text="Label" wrapText="true" GridPane.columnIndex="1" GridPane.valignment="TOP"/>
            <Label fx:id="statusText" text="Label" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.valignment="TOP"/>
            <Label fx:id="revenueText" text="Label" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.valignment="TOP"/>
            <Label fx:id="budgetText" text="Label" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.valignment="TOP"/>
