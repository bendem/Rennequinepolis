            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Runtime" GridPane.valignment="TOP">
                <font>
                    <Font name="System Bold" />
                </font>
            </Text>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Budget" GridPane.rowIndex="3" GridPane.valignment="TOP">
